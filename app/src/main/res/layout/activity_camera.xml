<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.jianjin.customcamera.CameraActivity">

    <com.jianjin.camera.widget.CameraContainer
        android:id="@+id/camera_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/camera_iv_back"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:padding="15dp"
        android:src="@drawable/camera_ic_back" />

    <ImageView
        android:id="@+id/camera_iv_history"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:padding="15dp"
        android:src="@drawable/camera_ic_history" />

    <com.jianjin.camera.widget.CameraAreaView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="310dp"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="200dp" />



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="15dp">

        <TextView
            android:id="@+id/camera_tv_switch"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:background="@drawable/camera_ic_switch" />

        <ImageView
            android:id="@+id/camera_iv_take"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/camera_ic_take" />

        <ImageView
            android:id="@+id/camera_tv_light"
            android:layout_width="100dp"
            android:layout_height="40dp"

            android:layout_centerVertical="true"
            android:layout_marginStart="265dp"
            android:layout_marginTop="55dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="120dp"
            android:layout_toEndOf="@+id/camera_tv_switch"
            android:background="@drawable/camera_light_selector"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/camera_iv_picture"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dp"
            android:background="@drawable/camera_ic_picture" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerInParent="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:visibility="gone" />
    </RelativeLayout>
</FrameLayout>